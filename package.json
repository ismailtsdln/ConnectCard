{
  "name": "connectcard",
  "version": "1.0.0",
  "description": "Modern Wi-Fi QR card generator with CLI & Web UI",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^25.0.7",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.17"
  }
}
